#!/bin/groovy
pipeline {
  agent any
  
  stages {
	stage('Install dependencies') {
      steps {
        bat 'npm install'
      }
    }
    stage('Test') {
      steps {
        script {
          bat 'npm run test -- --coverage'
        }
      }
      post {
        always {
          step([$class: 'CoberturaPublisher', coberturaReportFile: 'coverage/cobertura-coverage.xml'])
        }
      }
    }
  }
}